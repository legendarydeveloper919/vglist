<% content_for :title, @user.username %>

<h1><%= @user.username %></h1>

<% if !@user.bio.blank? %>
  <p><%= @user.bio %></p>
<% else %>
  <p>
    <%= @user == current_user ? "You haven't added a bio yet." : "This user hasn't added a bio yet." %>
  <p>
<% end %>

<h3>Library</h3>
<% if !@purchased_releases.blank? %>
  <div id="game-library">
    <library
      v-bind:purchased-releases="<%= @purchased_releases.to_json(except: [:created_at, :updated_at]) %>"
    >
    </library>
  </div>
<% else %>
  <p>
    <%= @user == current_user ? "You haven't added any games to your library yet." : "This user hasn't added any games to their library yet." %>
  </p>
<% end %>
