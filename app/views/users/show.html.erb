<% content_for :title, @user.username %>

<h1 class="title"><%= @user.username %></h1>

<% if @user.admin? %>
  <p><span class="tag is-primary has-text-weight-semibold">Admin</span>
<% elsif @user.moderator? %>
  <p><span class="tag is-primary has-text-weight-semibold">Moderator</span>
<% end %>

<% if !@user.bio.blank? %>
  <p><%= @user.bio %>
<% else %>
  <p><%= @user == current_user ? "You haven't added a bio yet." : "This user hasn't added a bio yet." %>
<% end %>

<% if policy(@user).update_role? && @user != current_user %>
  <div class="field is-grouped">
    <% unless @user.role == "member" %>
      <p class="control"><%= link_to "Make member", update_role_user_path(id: @user.id, role: "member"), data: { method: "post" }, class: "button" %>
    <% end %>
    <% unless @user.role == "moderator" %>
      <p class="control"><%= link_to "Make moderator", update_role_user_path(id: @user.id, role: "moderator"), data: { method: "post" }, class: "button" %>
    <% end %>
    <% unless @user.role == "admin" %>
      <p class="control"><%= link_to "Make admin", update_role_user_path(id: @user.id, role: "admin"), data: { method: "post" }, class: "button" %>
    <% end %>
  </div>
<% end %>

<h3 class="title is-3">Library</h3>
<% if !@purchased_releases.blank? %>
  <div id="game-library">
    <library
      v-bind:purchased-releases="<%= @purchased_releases.to_json(except: [:created_at, :updated_at]) %>"
    >
    </library>
  </div>
<% else %>
  <p><%= @user == current_user ? "You haven't added any games to your library yet." : "This user hasn't added any games to their library yet." %>
<% end %>
