<%= form_for @game do |f| %>
  <div class="field">
    <%= f.label :name, "Game title", class: "label" %>
    <div class="control">
      <%= f.text_field :name, autocomplete: "off", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, "Description", class: "label" %>
    <div class="control">
      <%= f.text_area :description, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, "Genre", class: "label" %>
    <div id="genre-select">
      <genre-select
        v-bind:genres-path="<%= genres_path(format: :json).to_json %>"
      ></genre-select>
    </div>
  </div>

  <div class="field">
    <%= f.submit "Submit", class: "button is-primary" %>
  </div>
<% end %>
