<% content_for :title, "Create a new game" %>

<h1 class="title">Create a new game</h1>

<div data-vue-component="game-form"
  data-vue-props="<%=
    {
      submitPath: games_url,
      railsDirectUploadsPath: rails_direct_uploads_url,
      successPath: games_url,
      cancelPath: games_url,
      create: true,
      name: @name ? @name : '',
      steamAppId: @steam_app_id ? @steam_app_id : nil
    }.to_json
  %>"></div>
