<% unless current_page.first? -%>
  <%= link_to raw(t 'views.pagination.previous'), url, rel: 'prev', remote: remote, class: 'pagination-previous' %>
<% else %>
  <%= link_to raw(t 'views.pagination.previous'), url, rel: 'prev', remote: remote, class: 'pagination-previous', disabled: true %>
<% end %>
