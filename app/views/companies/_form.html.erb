<%= form_for @company do |f| %>
  <div class="field">
    <%= f.label :name, "Company name", class: "label" %>
    <div class="control">
      <%= f.text_field :name, autocomplete: "off", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, "Description", class: "label" %>
    <div class="control">
      <%= f.text_area :description, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :wikidata_id, "Wikidata ID", class: "label" %>
    <div class="control">
      <%= f.number_field :wikidata_id, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.submit "Submit", class: "button is-primary" %>
    <%= link_to("Cancel", cancel_path, class: "button") %>
  </div>
<% end %>
