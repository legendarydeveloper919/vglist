<!DOCTYPE html>
<html lang="en">
  <%= render 'shared/head' %>

  <body>
    <%= render 'shared/navbar' %>

    <%# Rails flash messages %>
    <% flash.each do |type, message| -%>
      <div class="flash-notification notification <%= flash_class(type) %> level">
        <p class="level-item level-left"><%= message %></p>
        <button class="delete level-item level-right"></button>
      </div>
    <% end %>

    <div class="section">
      <div class="container is-fluid pr-0-mobile pl-0-mobile">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
