<% content_for :title, @genre.name %>

<h1 class="title"><%= @genre.name %></h1>
<h2 class="subtitle">
  <%= @genre.description.blank? ? "This genre doesn't have a description yet." : @genre.description %>
</h2>

<% if user_signed_in? %>
  <ul>
    <li><%= link_to("Edit", edit_genre_path(@genre.id)) %>
    <li><%= link_to("Delete", genre_path(@genre.id), method: :delete, data: { confirm: "You sure?" }) %>
  </ul>
<% end %>

<% if !@genre.games.blank? %>
  <p>Games:

  <ul>
    <% @genre.games.each do |game| %>
      <li><%= link_to(game.name, game_path(game.id)) %>
    <% end %>
  </ul>
<% else %>
  <p>This genre doesn't have any games yet.
<% end %>
